<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="15dp"
    android:background="@color/colorBackground"
    tools:context=".FailedActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Marking Attendance Failed "
            android:textSize="40sp"
            android:textColor="#901"
            android:gravity="center"
            android:fontFamily="@font/insanibu"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You may try Again"
            android:fontFamily="@font/montserrat_light"
            android:textSize="20sp"
            android:textColor="@color/textColor"
            android:textStyle="italic"
            android:gravity="center"
            android:layout_margin="20dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_scanAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"

        android:fontFamily="@font/montserrat_light"
        android:textColor="@color/textColor"
        android:text="Scan Again"
        android:layout_marginBottom="15dp"
        android:textSize="25sp"
        android:background="@drawable/scan_again_back"
        />

</LinearLayout>